<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="#000000"
                                             tools:context="ar.sourcesistemas.empanada.roboarmstream.Acitivty.StreamActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/acndigital"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/v_guideline2"
        app:layout_constraintRight_toLeftOf="@+id/v_der1"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="@+id/h_guideline1"
        android:layout_marginTop="180dp"
        app:layout_constraintLeft_toRightOf="@+id/button_abrirPinza"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintVertical_bias="0.571" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="359dp"
        android:id="@+id/v_izq1"
        app:layout_constraintGuide_begin="82dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="82dp"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="359dp"
        android:id="@+id/v_der1"
        app:layout_constraintGuide_begin="514dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="514dp"/>

    <android.support.constraint.Guideline
        android:layout_width="592dp"
        android:layout_height="wrap_content"
        android:id="@+id/h_guideline1"
        app:layout_constraintGuide_begin="47dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="47dp"
        tools:layout_editor_absoluteX="0dp"/>

    <android.support.constraint.Guideline
        android:layout_width="592dp"
        android:layout_height="wrap_content"
        android:id="@+id/v_guideline2"
        app:layout_constraintGuide_begin="259dp"
        android:orientation="horizontal" />

    <Button
        android:id="@+id/button_morePres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="+Pres"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/v_izq1"
        android:layout_marginRight="0dp"
        app:layout_constraintHorizontal_bias="0.285"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/button_lessPres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="-Pres"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/v_der1"/>

    <Button
        android:id="@+id/button_adelante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="Adelante"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toLeftOf="@+id/button_muñecaUp"
        android:layout_marginRight="8dp"
        app:layout_constraintLeft_toRightOf="@+id/button_subir"
        android:layout_marginLeft="8dp"/>

    <Button
        android:id="@+id/button_atras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Atras"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/button_adelante"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/button_adelante"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/button_adelante"/>

    <Button
        android:id="@+id/button_cerrarPinza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cerrar"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/button_der"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/button_abrirPinza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Abrir"
        app:layout_constraintBottom_toTopOf="@+id/button_izq"
        app:layout_constraintTop_toBottomOf="@+id/button_bajar"
        tools:layout_editor_absoluteX="0dp"/>

    <Button
        android:id="@+id/button_subir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:text="brazo arriba"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/h_guideline1"/>

    <Button
        android:id="@+id/button_bajar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="104dp"
        android:layout_marginTop="8dp"
        android:text="brazo abajo"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintTop_toBottomOf="@+id/button_subir"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/button_abrirPinza"/>

    <Button
        android:id="@+id/button_izq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="izquierda"
        tools:layout_editor_absoluteX="0dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/v_guideline2"/>

    <Button
        android:id="@+id/button_der"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:text="derecha"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/v_guideline2"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/button_muñecaDown"
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:text="muñeca abajo"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/button_cerrarPinza"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/button_muñecaUp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/button_muñecaUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="muñeca arriba"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"/>
</android.support.constraint.ConstraintLayout>
